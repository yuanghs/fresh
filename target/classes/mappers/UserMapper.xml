<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fresh.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.fresh.bean.User">
        <id column="uid" property="uid"/>
        <result column="account" property="account"/>
        <result column="nickname" property="sex"/>
        <result column="sex" property="sex"/>
    </resultMap>
    <sql id="Base_Column_List">
    uid, account, nickname, sex
  </sql>

    <!-- 根据主键查询用户信息 -->
    <select id="SelectUserByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
    select 
    account,nickname,sex
    from user
    where uid = #{uid,jdbcType=INTEGER}
  </select>

  <!-- 根据账户查询用户信息 -->
  <select id="SelectUserByAccount" resultMap="BaseResultMap" parameterType="java.lang.Integer">
    select
    *
    from user
    where account = #{account,jdbcType=INTEGER}
  </select>

    <!-- 向用户表插入一条记录：插入账户名(手机号)，昵称 -->
    <insert id="insertUser" parameterType="com.fresh.bean.User">
    insert into user (account, nickname, sex)
    values (#{account,jdbcType=VARCHAR}, #{nickname,jdbcType=VARCHAR}, #{sex,jdbcType=VARCHAR}
      )
  </insert>

    <!-- 根据用户主键修改用户的昵称 -->
    <update id="updateSexByPrimaryKey" parameterType="com.fresh.bean.User">
    update user
    set
      sex = #{sex,jdbcType=VARCHAR},
    where uid = #{uid,jdbcType=INTEGER}
    </update>

</mapper>