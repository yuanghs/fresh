<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fresh.mappers.ProductMapper">

    <resultMap id="Product" type="com.fresh.bean.Product">
        <id column="pid" property="com.fresh.bean.Product"/>
        <result column="pname" property="pname"/>
        <result column="price" property="price"/>
        <result column="pinfo" property="pinfo"/>
        <result column="plink" property="plink"/>
        <result column="inventory" property="inventory"/>

        <association property="category"
                     column="cid"
                     javaType="com.fresh.bean.Category">
            <id column="cid" property="cid"/>
            <result column="cname" property="cname"/>
        </association>
    </resultMap>

    <sql id="Base_Column_List">
    pid, pname, price, pinfo, plink, inventory, cid
  </sql>

    <!-- 从数据库中随机查询出6条产品记录 -->
    <select id="selectRandomProducts" resultMap="Product">
        select * from product order by rand() limit 6
  </select>

    <!-- 根据主键查询商品：返回商品的详情 -->
    <select id="selectProductByPrimaryKey" resultMap="Product" parameterType="com.fresh.bean.Product">
        select pname, price, pinfo, plink, inventory from product where pid = #{pid,jdbcType=INTEGER}
  </select>

</mapper>